<div class="commentForm">
  <form class="commentForm" method="POST" action="/commentForm">
    <input type="hidden" name="post_id" value="{{postId}}" />
    <textarea
      id="body"
      name="body"
      required
      placeholder="Write a comment..."
    ></textarea>
    <button class="commentForm__form__button" type="submit">Comment</button>
  </form>
</div>